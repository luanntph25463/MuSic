<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.SettingFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_border_2"
            android:gravity="center"
            android:text="L"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Thư Viên"
            android:textSize="24dp" />
        <ImageButton
            android:id="@+id/dows"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginStart="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/search" />
        <ImageButton
            android:id="@+id/dowss"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginStart="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/add" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/button_border_4"
            android:gravity="center"
            android:text="Danh Sách Phát"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Gần Đây"/>
        <ImageButton
            android:id="@+id/dowssa"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginStart="170dp"
            android:background="@android:color/transparent"
            android:src="@drawable/search" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView11"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Gần Đây"/>
        <ImageButton
            android:id="@+id/dowsssssa"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginStart="170dp"
            android:background="@android:color/transparent"
            android:src="@drawable/search" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/textView12"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_launcher_background"
            android:text="Gần Đây"/>

        <TextView
            android:id="@+id/dowsssssb"
            android:layout_width="123dp"
            android:layout_height="63dp"
            android:text="Bài Hát ưa Thích" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/textView123"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_launcher_background"
            android:text="Gần Đây"/>

        <TextView
            android:id="@+id/dowsssssbc"
            android:layout_width="123dp"
            android:layout_height="63dp"
            android:text="Bài Hát ưa Thích" />
    </LinearLayout>
</FrameLayout>